<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TermuxActivity DayNight NoActionBar theme. -->
    <style name="Theme.TermuxActivity.DayNight.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowSwipeToDismiss">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/black</item>

    </style>

    <style name="Theme.InstallActivity.DayNight.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/black</item>

    </style>

</resources>
